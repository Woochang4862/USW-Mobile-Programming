<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/topping_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="토핑 이미지" />

    <TextView
        android:id="@+id/topping_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="토핑 이름"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/topping_image"
        app:layout_constraintTop_toTopOf="@id/topping_image"
        app:layout_constraintEnd_toStartOf="@id/btn_add_topping" />

    <TextView
        android:id="@+id/topping_calories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="0 Cal"
        android:textColor="#888888"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/topping_image"
        app:layout_constraintTop_toBottomOf="@id/topping_name"
        app:layout_constraintEnd_toStartOf="@id/btn_add_topping" />

    <TextView
        android:id="@+id/btn_add_topping"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/circle_button_yellow"
        android:gravity="center"
        android:text="+"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 