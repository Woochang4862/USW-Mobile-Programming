<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/expression_text_view"
                android:layout_span="5"
                android:text="0"
                android:textSize="30dp"/>

        </TableRow>

        <TableRow>

        </TableRow>

        <TableRow android:weightSum="5">

            <Button
                android:id="@+id/number_zero_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0" />

            <Button
                android:id="@+id/number_one_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1" />

            <Button
                android:id="@+id/number_two_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2" />

            <Button
                android:id="@+id/number_three_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="3" />

            <Button
                android:id="@+id/number_four_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="4" />

        </TableRow>

        <TableRow android:weightSum="5">

            <Button
                android:id="@+id/number_five_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:id="@+id/number_six_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="6" />

            <Button
                android:id="@+id/number_seven_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/number_eight_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:id="@+id/number_nine_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="9" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/addition_button"
                android:layout_span="5"
                android:text="더하기" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/subtraction_button"
                android:layout_span="5"
                android:text="빼기" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/multiplication_button"
                android:layout_span="5"
                android:text="곱하기" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/division_button"
                android:layout_span="5"
                android:text="나누기" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/clear_button"
                android:layout_span="5"
                android:text="지우기" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/calculate_button"
                android:layout_span="5"
                android:text="계산" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/result_text_view"
                android:layout_span="5"
                android:textColor="#FF0000"
                android:text="계산 결과 : 0"
                android:textSize="30dp"/>

        </TableRow>

    </TableLayout>


</LinearLayout>